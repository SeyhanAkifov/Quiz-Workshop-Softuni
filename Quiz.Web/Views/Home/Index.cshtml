@model IEnumerable<Quiz.Services.ViewModels.UserQuizWiewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<table class="table table-sm table-striped table-hover table-bordered" >
    <tr>
        <th>Quiz name</th>
        <th>Action</th>
    </tr>

    @foreach (var quiz in Model)
     {
           <tr>
               <td>@quiz.Title</td>
               <td>
                   @if (quiz.Status == Quiz.Services.ViewModels.Quizstatus.NotStarted)
                   {
                       <a href="/Quiz/Test/@quiz.Id" class="btn btn-success">Start test</a>
                   }
                   else if (quiz.Status == Quiz.Services.ViewModels.Quizstatus.InProgress)
                   {
                       <a href="/Quiz/Test/@quiz.Id" class="btn btn-warning">Contunue test</a>
                   }
                   else
                   {
                       <a href="/Quiz/Results/@quiz.Id" class="btn btn-secondary">View results</a>
                   }
               </td>
           </tr>
     }
</table>